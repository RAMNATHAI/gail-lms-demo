# Environment Configuration for GAIL Enhanced LMS
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
APP_NAME=GAIL Enhanced LMS
APP_VERSION=1.0.0

# Server Configuration
FRONTEND_PORT=3000
BACKEND_PORT=3001
AI_SERVICES_PORT=8000

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/gail_lms?authSource=admin
REDIS_URL=redis://:redis123@localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=GAIL Enhanced LMS
NEXT_PUBLIC_APP_VERSION=1.0.0

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=gail-lms-content
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# AI/ML Services Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gail.com
EMAIL_PASS=your-email-app-password
EMAIL_FROM=GAIL LMS <noreply@gail.com>

# SMS Configuration (optional)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,mp4,mp3,jpg,jpeg,png,gif
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# Analytics Configuration
ELASTICSEARCH_URL=http://localhost:9200
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Cache Configuration
CACHE_TTL=3600
ENABLE_REDIS_CACHE=true

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true

# Production Configuration (set these in production)
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# DOMAIN=lms.gail.com

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=gail-lms-backups

# Content Delivery Network
CDN_ENABLED=false
CDN_URL=https://cdn.gail.com

# Third-party Integrations
# GAIL_SSO_ENABLED=true
# GAIL_SSO_CLIENT_ID=your-sso-client-id
# GAIL_SSO_CLIENT_SECRET=your-sso-client-secret
# GAIL_SSO_CALLBACK_URL=http://localhost:3001/auth/sso/callback

# Video Processing (for video content)
VIDEO_PROCESSING_ENABLED=false
FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_QUALITY_LEVELS=360p,720p,1080p

# Real-time Features
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Feature Flags
FEATURE_AI_CHATBOT=true
FEATURE_SOCIAL_LEARNING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_APP=false
FEATURE_OFFLINE_MODE=false

# Performance Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=auto
MEMORY_LIMIT=512MB
CPU_LIMIT=1

# Testing Configuration
TEST_DATABASE_URI=mongodb://localhost:27017/gail_lms_test
TEST_REDIS_URL=redis://localhost:6379/1
JEST_TIMEOUT=30000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Compliance and Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
DATA_RETENTION_DAYS=2555
GDPR_COMPLIANCE=true

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Content Moderation
CONTENT_MODERATION_ENABLED=true
AUTO_MODERATION_ENABLED=false

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=3600000  # 1 hour in milliseconds
API_RATE_LIMIT_MAX=1000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
TIMEZONE=Asia/Kolkata
